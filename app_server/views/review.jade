extends layout

block content
  .row.page-header
    .col-lg-9
      h1= pageHeader.title
    .col-lg-3
      a.btn.btn-default.pull-right(href="/theater") Go Back Without Saving
  .row
    .col-xs-12.col-md-8
      form.form-horizontal(action="/theater", method="get", role="form")
        .form-group
          label-group
            label.col-xs-2.col-sm-2.control-label(for="name") Your Name
            .col-xs-10.col-sm-6
              input#name.form-control(name="name")
            label.col-xs-10.col-sm-2.control-label(for="rating") Rating
            .col-xs-12.col-sm-2
              select.form-control.input-sm(name="rating")
                option 5
                option 4
                option 3
                option 2
                option 1
        .form-group
          label-group
            label.col-xs-10.col-sm-2.control-label(for="play") Play Attended
            .col-xs-12.col-sm-4
              select.form-control.input-sm(name="play")
                each production in plays
                  option #{production.name}
            label.col-xs-10.col-sm-2.control-label(for="date") Date Attended
            .col-xs-12.col-sm-4
              select.form-control.input-sm(name="date")
                each production in plays
                  option #{production.dates}
        .form-group
          label.col-sm-2.control-label(for="review") Review
          .col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.btn-default.pull-right Submit Review
    .col-xs-12.col-md-4
